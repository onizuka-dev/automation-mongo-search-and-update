# MongoDB connection
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster-host>/<db>?retryWrites=true&w=majority&appName=<appName>
MONGODB_DB=<your_db_name>
# MONGODB_COLLECTION is optional and unused by default (scripts iterate all collections)
# MONGODB_COLLECTION=

# Search and replace
SEARCH_URL=https://old.example.com
REPLACE_URL=https://new.example.com

# Base URL for human-friendly doc URL representation
BASE_URL=https://bizee.com

# Replacement script behavior
# Set to "false" to perform actual writes. Default is true (no writes).
DRY_RUN=true
# Optional: Limit number of matched documents to update (useful for testing). Empty = no limit
LIMIT=
